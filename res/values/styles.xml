<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InnerShadowListItemText">
        <item name="android:layerType">software</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InnerShadowListItemText.Company">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">#996e44</item>
    </style>

    <style name="InnerShadowListItemText.Title">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#cb4129</item>
    </style>

    <style name="InnerShadowButton">
        <item name="android:layerType">software</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="InnerShadowButton.Top">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#cb4129</item>
    </style>
    
    <style name="InnerShadowButton.Bottom">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#996e44</item>
    </style>    

    <style name="InnerShadowButton.Section">
        <item name="android:textSize">22dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="InnerShadowButton.Section.1">
        <item name="android:textColor">#996e44</item>
    </style>

    <style name="InnerShadowButton.Section.2">
        <item name="android:textColor">#cb4129</item>
    </style>

</resources>