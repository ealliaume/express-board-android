<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_striped_grey"
    android:orientation="vertical"
    android:padding="5dp" >

    <info.piwai.expressboard.android.view.EllipsizingTextView
        android:id="@+id/experience"
        style="@style/InnerShadowButton.Top"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/offer"
            android:text="@string/offer"
            style="@style/InnerShadowButton.Section.1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/company"
            style="@style/InnerShadowButton.Section.1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <info.piwai.expressboard.android.view.EllipsizingTextView
            android:id="@+id/contract"
            style="@style/InnerShadowButton.Section.2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <info.piwai.expressboard.android.view.EllipsizingTextView
            android:id="@+id/location"
            style="@style/InnerShadowButton.Section.2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />
    </LinearLayout>

    <info.piwai.expressboard.android.view.EllipsizingTextView
        android:id="@+id/salary"
        style="@style/InnerShadowButton.Bottom"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

</LinearLayout>